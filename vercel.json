{
  "buildCommand": "cd backend && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/widgets/:path*",
      "destination": "/api"
    },
    {
      "source": "/pikaboard/manifest.webmanifest",
      "destination": "/manifest.webmanifest"
    },
    {
      "source": "/pikaboard/sw.js",
      "destination": "/sw.js"
    },
    {
      "source": "/pikaboard/registerSW.js",
      "destination": "/registerSW.js"
    },
    {
      "source": "/pikaboard/workbox-:path*",
      "destination": "/workbox-:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "backend/api/index.ts": {
      "runtime": "@vercel/node@3"
    }
  }
}