# PikaBoard Backend Environment Variables
# Copy this to .env and fill in the values

# API authentication token (generate a random 64-char hex string)
PIKABOARD_API_TOKEN=your_token_here
# Legacy fallback (deprecated): PIKABOARD_TOKEN

# OpenClaw Gateway URL (for session context, agent status)
OPENCLAW_GATEWAY_URL=http://localhost:18789

# Skills path (for file browser)
SKILLS_PATH=/home/jndoye/.openclaw/workspace/skills

# Optional: Database path (defaults to ./pikaboard.db)
# DB_PATH=./pikaboard.db

# Optional: Port (defaults to 3001)
# PORT=3001
